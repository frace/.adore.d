#!/usr/bin/env bash

bin_dir="$(cd $(dirname "${BASH_SOURCE[0]}") && pwd)"
base_dir="${bin_dir%\/*}"

unlink_dotfiles() {
    local etc_dir="${base_dir}/etc"

    for file in "${etc_dir}"/*/*; do
        if [[ ! "$file" =~ .md$ ]]; then
            unlink "${HOME}/.${file##*\/}" && {
                echo ">> Success: File \"${file}\" unlinked."
            }
        fi
    done
}

{
    unlink_dotfiles 
}
