#!/usr/bin/env bash

base_dir="${HOME}/.dotfiles.d"

deploy_dotfiles() {
    local etc="${base_dir}/etc"

    for file in "${etc}"/*/*; do
        if [[ ! "$file" =~ .md$ ]]; then
            ln -s "$file" "${HOME}/.${file##*\/}" && {
                echo ">> Success: File \"${file}\" linked."
            }
        fi
    done
}

{
    deploy_dotfiles
}
